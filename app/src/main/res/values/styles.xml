<resources>

    <style name="progressColor" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/secondaryColor</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/ThemeOverlay.MyBodyText</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="Theme.PokemonAppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primaryColor</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="MyWhiteMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay_card_custom_corners_large</item>
    </style>

    <style name="MyTabBarStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabTextColor">@color/secondaryTextColor</item>
        <item name="colorSurface">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="MyDarkTabBarStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="tabSelectedTextColor">@color/secondaryTextColor</item>
        <item name="tabTextColor">@color/primaryTextColor</item>
        <item name="colorSurface">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="MyDarkMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
        <item name="colorSurface">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="MyMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorSurface">@color/secondaryTextColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="FilterMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="colorSurface">@color/secondaryTextColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="NoShadowCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="android:spotShadowAlpha">0</item>
        <item name="android:ambientShadowAlpha">0</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ColoredTab.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
        <item name="android:textAppearance">@style/ThemeOverlay.MyBodyText</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="chipSurfaceColor">@color/primaryLightColor</item>
        <item name="chipBackgroundColor">@color/primaryLightColor</item>
        <item name="colorOnSurface">@color/primaryLightColor</item>
    </style>

    <style name="PokemonViewHolderMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/medium_margin_16dp</item>
        <item name="cornerSizeTopLeft">@dimen/medium_margin_16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="elevation">@dimen/large_margin_32dp</item>
        <item name="cardElevation">@dimen/large_margin_32dp</item>
        <item name="android:elevation">@dimen/large_margin_32dp</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_large" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/qualified_large_margin_48dp</item>
        <item name="cornerSizeTopLeft">@dimen/qualified_large_margin_48dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="elevation">@dimen/large_margin_32dp</item>
        <item name="cardElevation">@dimen/large_margin_32dp</item>
        <item name="android:elevation">@dimen/large_margin_32dp</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="PokeApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="Theme.PokemonAppTheme">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>


    <style name="PokeApp.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="alertDialogStyle">@style/PokeApp.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.PokeApp.DialogTitle.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.PokeApp.DialogBody.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/PokeApp.PositiveButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/PokeApp.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/PokeApp.NegativeButton</item>
    </style>

    <style name="PokeApp.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="PokeApp.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_marginStart">@dimen/qualified_medium_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/qualified_medium_margin_16dp</item>
    </style>

    <style name="PokeApp.NegativeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:layout_marginTop">@dimen/qualified_medium_margin_16dp</item>
    </style>

</resources>