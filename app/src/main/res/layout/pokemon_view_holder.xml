<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_elevation_6dp"
    app:cardElevation="@dimen/card_elevation_6dp"
    app:cardCornerRadius="@dimen/small_margin_8dp"
    style="@style/PokemonViewHolderMaterialCardStyle"
    tools:context="com.sealstudios.pokemonApp.ui.adapter.PokemonViewHolder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin_8dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/pokemon_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/pokemon_image"
            android:elevation="@dimen/small_margin_4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pokemon_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin_8dp"
            android:layout_marginTop="@dimen/small_margin_8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/pokemon_species_text_view_label"
            app:layout_constraintEnd_toStartOf="@id/pokemon_id_text_view_label"
            app:layout_constraintStart_toEndOf="@id/pokemon_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/pokemon_species_text_view_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/small_margin_8dp"
            app:layout_constraintBottom_toTopOf="@id/pokemon_types_chip_group_container"
            app:layout_constraintStart_toEndOf="@id/pokemon_image_view"
            app:layout_constraintTop_toBottomOf="@id/pokemon_name_text_view" />

        <TextView
            android:id="@+id/pokemon_id_text_view_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12sp"
            android:layout_marginEnd="@dimen/medium_margin_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pokemon_name_text_view"
            app:layout_constraintBottom_toBottomOf="@id/pokemon_name_text_view"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/pokemon_types_chip_group_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            app:flexWrap="wrap"
            app:justifyContent="flex_end"
            android:layout_marginEnd="@dimen/small_margin_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/pokemon_image_view">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/pokemon_types_chip_group"
                android:layout_marginTop="@dimen/small_margin_8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>