<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/pokeball_landed"
        motion:constraintSetStart="@id/pokeball_thrown"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                android:translationY="-100dp"
                motion:framePosition="20"
                motion:motionTarget="@id/pokeball_icon" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/pokeball_thrown"></ConstraintSet>

    <ConstraintSet android:id="@+id/pokeball_landed">
        <Constraint
            android:id="@+id/pokeball_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:rotation="720"
            android:scaleX="2"
            android:scaleY="2"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9" />
    </ConstraintSet>
</MotionScene>