<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialCardViewStyle">@style/MyMaterialCardStyle</item>
        <item name="android:navigationBarColor">
            #B3000000
        </item>
        <item name="android:statusBarColor">
            @color/colorPrimary
        </item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DarkAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="colorSurface">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="MyMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="colorSurface">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="PokemonViewHolderMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="colorSurface">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/medium_margin_16dp</item>
        <item name="cornerSizeTopLeft">@dimen/medium_margin_16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="elevation">@dimen/large_margin_32dp</item>
        <item name="cardElevation">@dimen/large_margin_32dp</item>
        <item name="android:elevation">@dimen/large_margin_32dp</item>
    </style>

</resources>