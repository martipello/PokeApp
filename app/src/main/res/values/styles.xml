    <style name="ThemeOverlay.MySmallBodyText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_small_body</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MySmallBodyTextBold" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/qualified_text_size_small_body</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyCaptionText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_caption</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyCaptionTextBold" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/qualified_text_size_caption</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyWhiteTitleText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_title</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyWhiteTitleTextBold" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/qualified_text_size_title</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyWhiteBodyText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_body</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyWhiteBodyTextBold" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/qualified_text_size_body</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyWhiteCaptionText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_caption</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyWhiteCaptionTextBold" parent="AppTheme">
