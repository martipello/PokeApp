<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sealstudios.pokemonApp.ui.PokemonDetailFragment">

    <com.sealstudios.pokemonApp.ui.customViews.fabFilter.CircleCardView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:elevation="@dimen/zero"
        android:visibility="invisible"
        app:cardElevation="@dimen/zero" />


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:outlineProvider="none"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:translationZ="8dp"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="@dimen/large_margin_32dp"
                android:minHeight="?attr/actionBarSize"
                app:elevation="@dimen/large_margin_32dp"
                app:layout_collapseMode="pin" />

            <ImageView
                android:id="@+id/squareangle_mask"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/squareangle"
                tools:ignore="ContentDescription" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_and_card_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qualified_small_margin_8dp"
            android:clipToPadding="false"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <include
                android:id="@+id/pokemonImageViewHolderLayout"
                layout="@layout/pokemon_detail_image_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="@id/backing_card"
                app:layout_constraintStart_toStartOf="@id/backing_card"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/card_top_guide"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qualified_medium_margin_12dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/pokemonImageViewHolderLayout"
                app:layout_constraintTop_toTopOf="@id/pokemonImageViewHolderLayout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/backing_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="@dimen/qualified_medium_margin_16dp"
                app:cardCornerRadius="@dimen/qualified_medium_margin_16dp"
                app:cardElevation="@dimen/qualified_medium_margin_16dp"
                app:layout_constraintBottom_toBottomOf="@id/content_holder"
                app:layout_constraintEnd_toEndOf="@id/content_holder"
                app:layout_constraintStart_toStartOf="@id/content_holder"
                app:layout_constraintTop_toBottomOf="@id/card_top_guide"
                app:layout_constraintWidth_max="500dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/qualified_medium_margin_16dp"
                android:layout_marginEnd="@dimen/qualified_medium_margin_16dp"
                android:layout_marginBottom="@dimen/qualified_medium_margin_16dp"
                android:clipToPadding="false"
                android:elevation="@dimen/qualified_large_margin_32dp"
                android:paddingStart="@dimen/qualified_large_margin_24dp"
                android:paddingEnd="@dimen/qualified_large_margin_24dp"
                android:paddingBottom="@dimen/qualified_medium_margin_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemonImageViewHolderLayout"
                app:layout_constraintWidth_max="500dp">

                <include
                    android:id="@+id/error_layout"
                    layout="@layout/pokemon_error_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qualified_medium_margin_16dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <include
                    android:id="@+id/main_progress"
                    layout="@layout/pokemon_loading_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/colored_pokeball_anim_faster"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />


                <TextView
                    android:id="@+id/title"
                    style="@style/ThemeOverlay.MyLargeTitleTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qualified_medium_margin_16dp"
                    android:text="@string/title"
                    app:layout_constraintEnd_toStartOf="@id/id_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/id_hash_label"
                    style="@style/ThemeOverlay.MyCaptionTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="1dp"
                    android:text="@string/pokemon_id_label"
                    app:layout_constraintEnd_toStartOf="@id/id_label"
                    app:layout_constraintTop_toTopOf="@id/title"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/id_label"
                    style="@style/ThemeOverlay.MyBodyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pokemon_id_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/title" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title">

                    <TextView
                        android:id="@+id/subtitle"
                        style="@style/ThemeOverlay.MySubTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qualified_small_margin_8dp"
                        android:text="@string/subtitle"
                        app:layout_constraintBottom_toTopOf="@id/pokemon_types_chip_group_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/pokemon_types_chip_group_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitle">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/pokemon_types_chip_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </com.google.android.flexbox.FlexboxLayout>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/types_barrier"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="subtitle,pokemon_types_chip_group_container" />

                    <TextView
                        android:id="@+id/gen_text_label"
                        style="@style/ThemeOverlay.MyBodyTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/generation_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/types_barrier" />

                    <TextView
                        android:id="@+id/gen_text_view"
                        style="@style/ThemeOverlay.MyBodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/qualified_small_margin_8dp"
                        android:text="@string/generation_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/gen_text_label"
                        app:layout_constraintTop_toBottomOf="@id/types_barrier"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/height_label"
                        style="@style/ThemeOverlay.MySmallBodyTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qualified_small_margin_8dp"
                        android:text="@string/height_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gen_text_label" />

                    <TextView
                        android:id="@+id/height_text_view"
                        style="@style/ThemeOverlay.MySmallBodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qualified_small_margin_8dp"
                        android:paddingStart="@dimen/qualified_small_margin_8dp"
                        android:text="@string/height_label"
                        app:layout_constraintStart_toEndOf="@id/height_label"
                        app:layout_constraintTop_toBottomOf="@id/gen_text_label"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/weight_label"
                        style="@style/ThemeOverlay.MySmallBodyTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qualified_small_margin_8dp"
                        android:paddingStart="@dimen/qualified_small_margin_8dp"
                        android:text="@string/weight_label"
                        app:layout_constraintStart_toEndOf="@id/height_text_view"
                        app:layout_constraintTop_toBottomOf="@id/gen_text_label"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/weight_text_view"
                        style="@style/ThemeOverlay.MySmallBodyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qualified_small_margin_8dp"
                        android:layout_marginEnd="@dimen/qualified_small_margin_8dp"
                        android:paddingStart="@dimen/qualified_small_margin_8dp"
                        android:paddingEnd="@dimen/qualified_small_margin_8dp"
                        android:text="@string/weight_label"
                        app:layout_constraintStart_toEndOf="@id/weight_label"
                        app:layout_constraintTop_toBottomOf="@id/gen_text_label" />

                    <View
                        android:id="@+id/info_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/qualified_medium_margin_16dp"
                        android:background="@color/light_grey"
                        app:layout_constraintBottom_toTopOf="@id/species_fragment"
                        app:layout_constraintTop_toBottomOf="@id/height_label" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/species_fragment"
                        android:name="com.sealstudios.pokemonApp.ui.PokemonSpeciesFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/pokemon_base_stats_fragment"
                        app:layout_constraintTop_toBottomOf="@id/info_divider"
                        tools:layout="@layout/pokemon_species_fragment" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/pokemon_base_stats_fragment"
                        android:name="com.sealstudios.pokemonApp.ui.PokemonBaseStatsFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/ability_fragment"
                        app:layout_constraintTop_toBottomOf="@id/species_fragment"
                        tools:layout="@layout/pokemon_base_stats_fragment" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/ability_fragment"
                        android:name="com.sealstudios.pokemonApp.ui.PokemonAbilityFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/movesFragment"
                        app:layout_constraintTop_toBottomOf="@id/pokemon_base_stats_fragment"
                        tools:layout="@layout/pokemon_ability_fragment" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/movesFragment"
                        android:name="com.sealstudios.pokemonApp.ui.PokemonMovesFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ability_fragment"
                        tools:layout="@layout/pokemon_moves_fragment" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>