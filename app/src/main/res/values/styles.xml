    <style name="progressColor" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/secondaryColor</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="MyWhiteMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay_card_custom_corners_large</item>
    </style>

    <style name="MyDarkMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryColor</item>
        <item name="colorSurface">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="MyMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="NoShadowCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="android:spotShadowAlpha">0</item>
        <item name="android:ambientShadowAlpha">0</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="PokemonViewHolderMaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryColor</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/medium_margin_16dp</item>
        <item name="cornerSizeTopLeft">@dimen/medium_margin_16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="elevation">@dimen/large_margin_32dp</item>
        <item name="cardElevation">@dimen/large_margin_32dp</item>
        <item name="android:elevation">@dimen/large_margin_32dp</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners_large" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/qualified_large_margin_48dp</item>
        <item name="cornerSizeTopLeft">@dimen/qualified_large_margin_48dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="elevation">@dimen/large_margin_32dp</item>
        <item name="cardElevation">@dimen/large_margin_32dp</item>
        <item name="android:elevation">@dimen/large_margin_32dp</item>
    </style>

    <style name="ThemeOverlay.MyLargeTitleText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_large_title</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyLargeTitleTextBold" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/qualified_text_size_large_title</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item name="android:textSize">@dimen/qualified_text_size_title</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MyTitleTextBold" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/qualified_text_size_title</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
    </style>

    <style name="ThemeOverlay.MySubTitleText" parent="AppTheme">
