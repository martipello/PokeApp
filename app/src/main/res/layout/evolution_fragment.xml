<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/evolution_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sealstudios.pokemonApp.ui.DetailFragment">

    <include
        android:id="@+id/evolution_loading"
        layout="@layout/loading_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/qualified_large_margin_32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/evolution_error"
        layout="@layout/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/qualified_large_margin_32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/evolution_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pokemon_about_label"
            style="@style/ThemeOverlay.MySubTitleTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/evolution"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/ThemeOverlay.MySmallBodyText"
            android:id="@+id/no_evolution_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qualified_small_margin_8dp"
            android:text="@string/does_not_evolve"
            android:paddingBottom="@dimen/qualified_medium_margin_16dp"
            app:layout_constraintTop_toBottomOf="@id/pokemon_about_label" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evolution_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/no_evolution_label"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
